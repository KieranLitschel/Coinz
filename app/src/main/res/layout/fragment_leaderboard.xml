                android:textAllCaps="true"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/UserHeaderName"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:text="@string/username"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textSize="18sp" />

